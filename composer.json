{
  "name": "gordon/pdowrapper",
  "description": "Wrapper and support classes for improved PDO",
  "minimum-stability": "stable",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Gordon McVey",
      "email": "email@example.com"
    }
  ],
  "keywords": [
    "database",
    "db",
    "pdo"
  ],
  "require": {
    "php": ">=8.2.0",
    "ext-pdo": "*",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "monolog/monolog": "^3.3",
    "squizlabs/php_codesniffer": "^3.7",
    "overtrue/phplint": "^9.0",
    "phpstan/phpstan": "^1.10"
  },
  "suggest": {
    "monolog/monolog": "Allows more advanced logging of database activity"
  },
  "autoload": {
    "psr-4": {
      "gordon\\pdowrapper\\": "src/gordon/pdowrapper"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "gordon\\pdowrapper\\tests\\unit\\": "tests/unit/gordon/pdowrapper"
    }
  },
  "scripts": {
    "unittest": "vendor/bin/phpunit",
    "phpcs": "vendor/bin/phpcs -ps --standard=psr12 --extensions=php",
    "lint": "vendor/bin/phplint --exclude=vendor --extensions=php ",
    "static": "vendor/bin/phpstan analyse --level=7",
    "all": [
      "@unittest ./tests/unit",
      "@phpcs ./bin ./src",
      "@lint ./bin ./src",
      "@static ./bin ./src"
    ]
  }
}
